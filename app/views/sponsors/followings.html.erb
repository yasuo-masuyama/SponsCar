<div class="ui grid">
  <div class="three wide column">
    <% if sponsor_signed_in? %>
      <%= render 'sponsors/sidebar', sponsor: current_sponsor %>
    <% elsif driver_signed_in?%>
      <%= render "drivers/sidebar", driver: current_driver %>
    <% end %>
  </div>
  
  <div class="twelve wide column">
    <h3 class="ui header">フォロー リスト</h3>
    <table class="ui table">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @followings.each do |driver| %>
          <tr>
            <td><%= image_tag driver.profile_image.variant(resize_to_fill: [100, 100]) %></td>
            <td><%= driver.name %></td>
            <td>
              <%= link_to driver_path(driver), class: "ui blue button mini floated right", data: {"turbolinks" => false} do %>
                詳細 <i class="fas fa-arrow-right"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>


