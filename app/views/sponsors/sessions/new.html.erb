<h2 class="ui header" style="text-align: center;">Sponsorログイン</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui form"}) do |f| %>
  <div class="ui stacked segment">
    <div class="field">
      <%= f.label :email %>
      <div class="ui left icon input">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <i class="user icon"></i>
      </div>
    </div>

    <div class="field">
      <%= f.label :password %>
      <div class="ui left icon input">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        <i class="lock icon"></i>
      </div>
    </div>

    <%= f.submit "ログイン", class: "ui fluid primary button" %>
  </div>
<% end %>

<h2 class="ui header" style="text-align: center;">Sponsor簡単ログイン</h2>
<div class="ui segment">
  <%= link_to sponsor_guest_sign_in_path, class:"ui fluid teal button", method: :post do %>
    ゲストログイン（閲覧用）<i class="fas fa-arrow-right"></i>
  <% end %>
</div>

