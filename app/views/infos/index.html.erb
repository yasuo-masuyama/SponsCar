<h3>お知らせ一覧</h3>
  <thead>
    <tr>
    <td>お知らせ相手</td>
    <td>タイトル</td>
    <td>日時</td>
    <td>お知らせ内容</td>
    <td colspan="2">詳細画面</td>
    </tr>
  </thead>
<tbody>
<% @infos.each do |i| %>
  <tr>
    <td><%= i.viewer_type %></td>
    <td><%= i.title %></td>
    <td><%= i.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    <td><%= i.content %></td>
    <td colspan="2">
    <%= link_to "詳細", info_path(i.id), class: "btn-sm btn-success" %></td>
  </tr>
<% end %>