<h3>お知らせ一覧</h3>
<table class="ui celled table">
  <thead>
    <tr>
      <th>お知らせ相手</th>
      <th>タイトル</th>
      <th>日時</th>
      <th>お知らせ内容</th>
      <th colspan="2">詳細画面</th>
    </tr>
  </thead>
  <tbody>
    <% @infos.each do |i| %>
      <tr>
        <td><%= i.viewer_type %></td>
        <td><%= i.title %></td>
        <td><%= i.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= i.content %></td>
        <td colspan="2">
          <%= link_to "詳細", info_path(i.id), class: "ui button small green" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
