<%= form_with(model: @info, local: true, url:choose_new_or_edit ) do |f| %>
  <tr>
    <td><%= f.label :タイトル %></td><br>
    <td><%= f.text_field :title, autofocus: true, autocomplete:"", placeholder:"タイトルを入力", class: "form-control" %></td>
  </tr>
  <tr>
    <td><%= f.label :閲覧者タイプ %></td><br>
    <td>
      <%= f.radio_button :viewer_type, :both %>
      <%= f.label "全て  " %>
      <%= f.radio_button :viewer_type, :ad_client %>
      <%= f.label "Sponsor" %>
      <%= f.radio_button :viewer_type, :driver %>
      <%= f.label "Driver" %></td>
  </tr> <br>
  <tr>
    <td><%= f.label :内容 %></td>
    <td><%= f.text_area :content, autofocus: true, autocomplete:"", placeholder:"内容を入力", class: "form-control",:size => "60x10" %></td>
  </tr><br>
  <tr>
    <td class="text-center">
      <%= f.submit class: "btn btn-primary "%>
    </td>
  </tr>
<% end %>