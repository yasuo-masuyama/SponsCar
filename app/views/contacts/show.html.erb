<h3>お問い合わせ詳細</h3>
<table class="ui celled table">
  <tr>
    <th class="active">名前</th>
    <td><%= @contact.name %></td>
  </tr>
  <tr>
    <th class="active">会社名</th>
    <td><%= @contact.company_name %></td>
  </tr>
  <tr>
    <th class="active">お問い合わせ日</th>
    <td><%= @contact.created_at.strftime("%Y-%m-%d") %></td>
  </tr>
  <tr>
    <th class="active">ステータス</th>
    <td>
      <%= form_with(model: @contact, local: true, url: contact_path(@contact)) do |f| %>
        <%= f.select :work_status, Contact.work_statuses.keys.map { |k| [I18n.t("enums.contact.work_status.#{k}"), k] } %>
        <%= f.submit "更新", class: "ui button primary" %>
      <% end %>
    </td>
  </tr>
  <tr>
    <th class="active">内容</th>
    <td><%= @contact.content %></td>
  </tr>
</table>
