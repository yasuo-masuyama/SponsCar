<h3 class="ui dividing header">お問い合わせフォーム</h3>

<% if @contact.errors.any? %>
  <div class="ui error message">
    <div class="header">
      <%= @contact.errors.count %>件のエラーです。
    </div>
    <ul class="list">
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @contact, local: true, url:confirm_contacts_path, class: "ui form") do |f| %>
  <div class="ui segment">
    <div class="field">
      <%= f.label :お名前, class: "ui label" %>
      <%= f.text_field :name, autofocus: true, autocomplete:"", placeholder:"お名前を入力" %>
    </div>

    <div class="field">
      <%= f.label :会社名, class: "ui label" %>
      <%= f.text_field :company_name, autofocus: true, autocomplete:"", placeholder:"スポンサーの方は会社名の入力をお願いします" %>
    </div>

    <div class="field">
      <%= f.label :電話番号, class: "ui label" %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete:"", placeholder: "ハイフンは不要です" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス, class: "ui label" %>
      <%= f.text_field :email, autofocus: true, placeholder: '半角英数字でご入力ください' %>
    </div>

    <div class="field">
      <%= f.label :お問い合わせ内容, class: "ui label" %>
      <%= f.text_area :content, autofocus: true, autocomplete:"", placeholder:"お問い合わせ内容をご入力ください", rows: "6" %>
    </div>

    <div class="field text-center">
      <%= f.submit "確認画面に進む", class: "ui fluid primary button" %>
    </div>
  </div>
<% end %>

<br>

<% if sponsor_signed_in? %>
  <%= link_to dashboard_sponsor_path(current_sponsor), class: "fas fa-angle-left" do %>
    マイページへ戻る
  <% end %>
<% elsif driver_signed_in? %>
  <%= link_to dashboard_driver_path(current_driver), class: "fas fa-angle-left" do %>
    マイページに戻る
  <% end %>
<% end %>
