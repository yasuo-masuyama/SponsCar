<h3>お問い合わせフォーム</h3>
<%= form_with(model: @contact, local: true) do |f| %>
  <div class="ui form">
    <div class="field">
      <%= f.label :お名前 %>
      <%= f.text_field :name, autofocus: true, autocomplete:"", placeholder:"お名前を入力" %>
    </div>
    <div class="field">
      <%= f.label :会社名 %>
      <%= f.text_field :company_name, autofocus: true, autocomplete:"", placeholder:"広告店の方は会社名の入力をお願いします" %>
    </div>
    <div class="field">
      <%= f.label :電話番号 %>
      <%= f.text_field :telephone_number, autofocus: true, autocomplete:"" , placeholder: "ハイフンは不要です" %>
    </div>
    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.text_field :email, autofocus: true, placeholder: '半角英数字でご入力ください' %>
    </div>
    <div class="field">
      <%= f.label :お問い合わせ内容 %>
      <%= f.text_area :content, autofocus: true, autocomplete:"", placeholder:"お問い合わせ内容をご入力ください", :rows => "6" %>
    </div>
    <div class="field text-center">
      <%= button_tag :type => "submit", class: "ui button primary" do %>
        <span>確認画面へ進む</span><i class="fas fa-angle-double-right"></i>
      <% end %>
    </div>
  </div>
<% end %>

<br>
<% if sponsor_signed_in? %>
  <%= link_to dashboard_sponsor_path(current_sponsor) do %><i class="fas fa-angle-left"></i> マイページへ戻る<% end %>
<% elsif driver_signed_in? %>
  <%= link_to dashboard_driver_path(current_driver) do %><i class="fas fa-angle-left"></i> マイページに戻る<% end %>
<% end %>
