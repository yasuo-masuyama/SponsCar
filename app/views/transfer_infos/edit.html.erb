<h3 class="ui dividing header">振込先口座編集</h3>

  <% if @transfer_info.errors.any? %>
  <div class="ui negative message">
    <div class="header">
      <%= @transfer_info.errors.count %>件のエラーです
    </div>
    <ul class="list">
      <% @transfer_info.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="ui segment">
  <%= form_with(model: @transfer_info, local: true, url: driver_transfer_info_path) do |f| %>
    <div class="ui form">
      <div class="field">
        <%= f.label :bank_name, class: "ui label" %>
        <%= f.text_field :bank_name, autofocus: true, autocomplete:"", placeholder:"銀行名を入力", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :branch_name, class: "ui label" %>
        <%= f.text_field :branch_name, autofocus: true, autocomplete:"", placeholder:"支店名を入力", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :account_type, class: "ui label" %>
        <div class="inline fields">
          <div class="field">
            <%= f.radio_button :account_type, :ordinary %>
            <%= f.label "普通預金" %>
          </div>
          <div class="field">
            <%= f.radio_button :account_type, :checking %>
            <%= f.label "当座預金" %>
          </div>
        </div>
      </div>

      <div class="field">
        <%= f.label :account_number, class: "ui label" %>
        <%= f.text_field :account_number, autofocus: true, autocomplete:"", placeholder:"口座番号を入力", class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :account_name, class: "ui label" %>
        <%= f.text_field :account_name, autofocus: true, autocomplete:"", placeholder:"口座名義人の名前をカタカナで入力", class: "form-control" %>
      </div>

      <%= f.submit "登 録", class: "ui fluid primary button" %>
      
    </div>
  <% end %>
</div>

