<% if driver_signed_in? %>
  <% if check_apply.present? %>
    <div class="ui message">現在、お申し込み中の広告があるため、新規のお申し込みはできません。</div>
  <% else %>
    <%= form_with(model: under_deal, url: under_deals_path, method: :post, class: "ui form") do |f| %>
      <%= f.hidden_field :advertisement_id, value: advertisement.id %>
      <%= f.hidden_field :driver_id, value: current_driver.id %>
      <%= f.submit "この広告に申し込む", class: "ui primary button" %>
    <% end %>
  <% end %>
  <br>
  <section class="question">
    <% if room.nil? %>
      <%= link_to '広告のことで質問する', coming_soon_path, class: "ui teal button" %>
    <% else %>
      <%= link_to '広告のことで質問する', coming_soon_path, class: "ui teal button" %>
    <% end %>
  </section>
  <br>
<% end %>
