<div class="ui vertical menu sidebar-area">
  <div class="item">
    <div class="ui centered circular image">
      <%= image_tag driver.profile_image.variant(resize_to_fill: [200, 200]) %> 
    </div>
    <div class="center aligned header" style="text-align: center; margin-top: 20px;">
      <%= driver.name %> さん
    </div>
  </div>
  <div class="item" id="none-border">
    <%= render "relationships/follow_count_driver", driver: current_driver %>
  </div>

  <div class="item">
    <div class="header">メニュー</div>
    <div class="menu">
      <%= link_to dashboard_driver_path(current_driver), class: "side-menu item" do %>
        <i class="fas fa-home"></i> マイページ
      <% end %>
      <%= link_to favorite_index_advertisement_path(current_driver), class: "side-menu item" do %>
        <i class="fas fa-heart"></i> お気に入り広告
      <% end %>
      <%= link_to advertisements_path, class: "side-menu item" do %>
        <i class="fas fa-search"></i> 広告を探す
      <% end %>
      <%= link_to drivers_path, class: "side-menu item" do %>
        <i class="fas fa-car"></i> Driver一覧
      <% end %>
      <%= link_to sponsors_path, class: "side-menu item" do %>
        <i class="fas fa-building"></i> Sponsor一覧
      <% end %>
      <%= link_to dashboard_driver_path(current_driver), class: "side-menu item" do %>
        <i class="fas fa-info-circle"></i> 取引情報
      <% end %>
      <%= link_to new_contact_path, class: "side-menu item" do %>
        <i class="fas fa-envelope"></i> お問い合わせ
      <% end %>
    </div>
  </div>

  <div class="item">
    <div class="header">設定</div>
    <div class="menu">
      <% if current_driver == driver %>
        <%= link_to edit_driver_path(current_driver), class: "side-menu item", data: { "turbolinks" => false } do %>
          <i class="fas fa-cog"></i> アカウント
        <% end %>
      <% end %>
      <%= link_to driver_transfer_infos_path(current_driver), class: "side-menu item", data: { "turbolinks" => false } do %>
        <i class="fas fa-money-check"></i> 口座情報
      <% end %>
      <%= link_to driver_car_infos_path(current_driver), class: "side-menu item", data: { "turbolinks" => false } do %>
        <i class="fas fa-car"></i> 車両情報
      <% end %>
      <%= link_to destroy_driver_session_path, method: :delete, class: "side-menu item" do %>
        <i class="fas fa-sign-out-alt"></i> ログアウト
      <% end %>
    </div>
  </div>
</div>

