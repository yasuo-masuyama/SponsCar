<div class="ui vertical menu sidebar-area">
  <div class="item">
    <div class="ui centered circular image">
      <%= image_tag driver.profile_image.variant(resize_to_fill: [200, 200]) %> 
    </div>
    <div class="center aligned header">
      <%= driver.name %> さん
    </div>
  </div>
  <div class="item" id="none-border">
    <%= render "relationships/follow_count_driver", driver: current_driver %>
  </div>

  <div class="item">
    <div class="header">メニュー</div>
    <div class="menu">
      <%= link_to "マイページ", dashboard_driver_path(current_driver), class: "side-menu item" %>
      <%= link_to "お気に入り広告", favorite_index_advertisement_path(current_driver), class: "side-menu item" %>
      <%= link_to "広告を探す", advertisements_path, class: "side-menu item" %>
      <%= link_to "Sponsor一覧", sponsors_path, class: "side-menu item" %>
      <%= link_to "取引情報", dashboard_driver_path(current_driver), class: "side-menu item" %>
      <%= link_to "お問い合わせ", new_contact_path, class: "side-menu item" %>
    </div>
  </div>

  <div class="item">
    <div class="header">設定</div>
    <div class="menu">
      <% if current_driver == driver %>
        <%= link_to edit_driver_path(current_driver), class: "side-menu item", data: { "turbolinks" => false } do %>
          アカウント
        <% end %>
      <% end %>
      <%= link_to "口座情報", driver_transfer_infos_path(current_driver), class: "side-menu item", data: { "turbolinks" => false } %>
      <%= link_to "車両情報", driver_car_infos_path(current_driver), class: "side-menu item", data: { "turbolinks" => false } %>
      <%= link_to "ログアウト", destroy_driver_session_path, method: :delete, class: "side-menu item" %>
    </div>
  </div>
</div>

