<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
      <div class="content">
        Adminログイン
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "ui large form" }) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <%= f.label :メールアドレス %>
          <div class="ui left icon input">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :パスワード %>
          <div class="ui left icon input">
            <%= f.password_field :password, autocomplete: "current-password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <%= f.submit "ログイン", class: "ui fluid large teal submit button" %>
      </div>
    <% end %>
    <div class="ui message">
      アカウントをお持ちでない方は <%= link_to "こちら", new_admin_registration_path %> から新規登録してください。
    </div>
  </div>
</div>


