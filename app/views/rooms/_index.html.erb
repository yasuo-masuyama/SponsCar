<div class="current-deal ui segment">
  <h3 class="ui header">お問い合わせ一覧</h3> 
  <table class="ui celled table">
    <thead>
      <tr>
        <th>お問い合わせ日</th>
        <th>タイトル</th>
        <th>ドライバー</th>
        <th>詳細画面</th>
      </tr>
    </thead>
    <tbody>
      <% rooms.each do |room| %>
        <tr>
          <td><%= room.updated_at.to_s(:datetime_jp) %></td>
          <td><%= room.advertisement.title %></td>
          <td><%= room.driver.name %></td>
          <td>
            <%= link_to advertisement_room_path(room.advertisement_id, room.id), class: "ui green button" do %>
              詳細 <i class="fas fa-arrow-right"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
