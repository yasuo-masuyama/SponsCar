<div class="row">
	<div class="col-xs-3 col-xs-offset-1">
		<%= image_tag @advertisement.image.variant(resize_to_fill: [200, 200]) %>
	</div>
	<div class="col-xs-7">
  <table>
    <tr>
      <th><h4><%= @advertisement.title %></h4></th>
    </tr>
    <tr>
      <td><h3><%= @advertisement.amounts %>円</h3></td>
    </tr>
    <tr>
      <td><h4><%= @advertisement.heading %></h4></td>
    </tr>
    <tr>
      <td><p><%= @advertisement.content %></p></td>
    </tr>
  </table>
		<table class="table">
			<tr>
      <th>ジャンル</th>
      <th>広告主</th>
      <th>広告作業期間</th>
			</tr>
			<tr>
				<td><%= @advertisement.genre.name %></td>
				<td><%= @advertisement.sponsor.company_name %></td>
				<td><%= @advertisement.start_due_on %><br>&emsp;〜<%= @advertisement.start_due_on %></td>
			</tr>
		</table>
  </div>
</div>

<div class="row">
	<div class="col-xs-10 col-xs-offset-1">
		<% if driver_signed_in? %>
			<div class="text-left">
				<h4>チャットボックス</h4>
					<input name="chat" type="text" data-behavior="room_speaker" data-user="0" data-room="<%= @room.id %>" >
				</div>
		<% else %>
			<div class="text-right">
				<h4>チャットボックス</h4>
					<input name="chat" type="text" data-behavior="room_speaker" data-user="1" data-room="<%= @room.id %>">
				</div>
			<% end %><br>
		<%= render "chat", collection: @chats %>
		</div>
	</div>
</div>